{
  "name": "clock-ui",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=@clock-ui/*",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docs:build": "turbo run build --filter=docs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.0",
    "bumpp": "^10.3.1",
    "happy-dom": "^20.0.10",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.1",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "unplugin-lightningcss": "^0.4.3",
    "vite": "npm:rolldown-vite@^7.2.2",
    "vitest": "^4.0.8"
  }
}
