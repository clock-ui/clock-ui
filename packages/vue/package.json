{
  "name": "@clock-ui/vue",
  "version": "0.1.0",
  "description": "Vue components for Clock UI, providing reactive clock widgets built with Vue 3 and Composition API.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/clock-ui/clock-ui#readme",
  "bugs": {
    "url": "https://github.com/clock-ui/clock-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clock-ui/clock-ui.git"
  },
  "author": "Robert Latamaosadi <robert.latamaosadi@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./base.css": "./dist/index.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp && bun publish --access public",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@clock-ui/styles": "workspace:*",
    "@clock-ui/utils": "workspace:*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.3"
  }
}
