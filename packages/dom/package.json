{
  "name": "@clock-ui/dom",
  "version": "0.1.0",
  "description": "Vanilla DOM-based clock components with built-in rendering and styling support.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/clock-ui/clock-ui#readme",
  "bugs": {
    "url": "https://github.com/clock-ui/clock-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clock-ui/clock-ui.git"
  },
