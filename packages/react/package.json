{
  "name": "@clock-ui/react",
  "version": "0.1.0",
  "description": "React components for Clock UI, providing live and static clock widgets built with React and hooks for reactive time updates.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/clock-ui/clock-ui#readme",
  "bugs": {
    "url": "https://github.com/clock-ui/clock-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clock-ui/clock-ui.git"
  },
  "author": "Robert Latamaosadi <robert.latamaosadi@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./base.css": "./dist/index.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite --config playground/vite.config.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && bun publish",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "dependencies": {
    "@clock-ui/styles": "workspace:*",
    "@clock-ui/utils": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@tsconfig/strictest": "^2.0.7",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "classnames": "^2.5.1"
  }
}
